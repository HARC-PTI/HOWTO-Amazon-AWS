{
    "variables" : {
        "region" : "us-east-2",
	"instance_type" : "t3.small",
        "build_author" : "{{env `packer_build_author`}}"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
            "instance_type" : "{{user `instance_type`}}",
            "source_ami" : "ami-03cfe750d5ea278f5",
            "ssh_username" : "ec2-user",
            "ami_name" : "rhel-aws-packer-example-2-{{isotime \"20060102-1504\"}}",
            "ami_description" : "RHEL AWS Packer Example #2",
            "run_tags" : {
                "Name" : "rhel-aws-packer-example-2-builder",
                "Tool" : "Packer",
		"Tool Version" : "{{packer_version}}",
                "Author" : "{{user `build_author`}}"
            }
        }
    ],
    "provisioners" : [
	{
	    "type" : "file",
	    "source" : "history_timestamp.sh",
	    "destination" : "/etc/profile.d/history_timestamp.sh"
	},
        {
            "type" : "shell",
	    "execute_command" : "{{.Vars}} bash '{{.Path}}'",
            "script" : "bootstrap.sh"
        }
    ]
}
